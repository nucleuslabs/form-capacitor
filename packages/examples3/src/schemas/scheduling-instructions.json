{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "SchedulingInstructions": {
            "title": "Scheduling Instructions",
            "description": "Instructions for booking client appointments",
            "type": "object",
            "properties": {
                "requiredAssessments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Instruction"
                    },
                    "title": "Instructions",
                    "description": "List of appointments that need to be booked",
                    "default": []
                },
                "specialInstructions": {
                    "type": "string",
                    "title": "specialInstructions",
                    "minLength": 10,
                    "maxLength": 20,
                    "pattern": "\\w",
                    "default": ""
                }
            },
         
            "required": [
                "requiredAssessments",
                "specialInstructions"
            ]
        },
        "Instruction": {
            "title": "Instruction",
            "type": "object",
            "properties": {
                "typeId": {
                    "type": "number",
                    "title": "Appointment Type",
                    "default": null
                },
                "teamId": {
                    "type": "number",
                    "title": "Team",
                    "default": null
                },
                "disciplineId": {
                    "type": "number",
                    "title": "Discipline",
                    "default": null
                },
                "prefClinicianId": {
                    "type": "number",
                    "title": "Preferred Clinician",
                    "default": null
                },
                "prefTime": {
                    "type": "number",
                    "title": "Preferred Time",
                    "default": null
                },
                "childRequired": {
                    "type": "boolean",
                    "title": "Child Req'd",
                    "default": false
                },
                "key": {
                    "type": "string",
                    "title": "Key"
                }
            },
            "required": [
                "childRequired",
                "disciplineId",
                "teamId",
                "typeId",
                "key"
            ]
        }
    }
}
