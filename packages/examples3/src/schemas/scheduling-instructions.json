{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "SchedulingInstructions": {
            "title": "Scheduling Instructions",
            "description": "Instructions for booking client appointments",
            "type": "object",
            "properties": {
                "requiredAssessments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Instruction"
                    },
                    "title": "Instructions",
                    "description": "List of appointments that need to be booked",
                    "default": []
                },
                "specialInstructions": {
                    "type": "string",
                    "title": "specialInstructions",
                    "minLength": 10,
                    "maxLength": 20,
                    "pattern": "\\w",
                    "default": ""
                }
            },
         
            "required": [
                "requiredAssessments",
                "specialInstructions"
            ]
        },
        "ID": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4294967295
        },
        "Instruction": {
            "title": "Instruction",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/ID",
                    "title": "ID",
                    "default": null
                },
                "typeId": {
                    "$ref": "#/definitions/ID",
                    "title": "Appointment Type",
                    "default": null
                },
                "teamId": {
                    "$ref": "#/definitions/ID",
                    "title": "Team",
                    "default": null
                },
                "disciplineId": {
                    "$ref": "#/definitions/ID",
                    "title": "Discipline",
                    "default": null
                },
                "prefClinicianId": {
                    "$ref": "#/definitions/ID",
                    "title": "Preferred Clinician",
                    "default": null
                },
                "prefTime": {
                    "type": "integer",
                    "title": "Preferred Time",
                    "minimum": 0,
                    "default": null
                },
                "childRequired": {
                    "type": "boolean",
                    "title": "Child Req'd",
                    "default": false
                },
                "key": {
                    "type": "string",
                    "title": "Key",
                    "default": {"$uuid": "shortid"}
                }
            },
            "required": [
                "childRequired",
                "disciplineId",
                "teamId",
                "typeId",
                "key"
            ]
        }
    }
}
